+	parse_simple_id(const char *str, snd_mixer_selem_id_t *sid)
+	{
+		int c, size;
+		char buf[128];
+		char *ptr = buf;
+
+		while (*str == ' ' || *str == '\t')
+			str++;
+		if (!(*str))
+			return -EINVAL;
+		size = 1;	/* for '\0' */
+		if (*str != '"' && *str != '\'') {
+			while (*str && *str != ',') {
+				if (size < (int)sizeof(buf)) {
+					*ptr++ = *str;
+					size++;
+				}
+				str++;
+			}
+		} else {
+			c = *str++;
+			while (*str && *str != c) {
+				if (size < (int)sizeof(buf)) {
+					*ptr++ = *str;
+					size++;
+				}
+				str++;
+			}
+			if (*str == c)
+				str++;
+		}
+		if (*str == '\0') {
+			snd_mixer_selem_id_set_index(sid, 0);
+			*ptr = 0;
+			goto _set;
+		}
+		if (*str != ',')
+			return -EINVAL;
+		*ptr = 0;	/* terminate the string */
+		str++;
+
+		if (!isdigit(*str))
+			return -EINVAL;
+		snd_mixer_selem_id_set_index(sid, atoi(str));
+	_set:
+		snd_mixer_selem_id_set_name(sid, buf);
